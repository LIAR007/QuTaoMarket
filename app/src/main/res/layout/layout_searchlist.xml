<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_gladapter_gimage"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_moren_goods"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:background="@drawable/ll_selector_white"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <TextView
            android:id="@+id/tv_gladapter_gname"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="商品名"
            android:textSize="18sp"
            android:textColor="@color/Black"
            android:textStyle="bold"
            android:singleLine="true"
            android:gravity="center_vertical|center_horizontal"/>
        <TextView
            android:id="@+id/tv_gladapter_gdetail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:text="简介"
            android:textSize="15sp"
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/goods_price"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/tv_gladapter_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥ "
                android:textColor="@color/colorRed"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/tv_gladapter_gprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorRed"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_gladapter_gtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机数码"
                android:textSize="13sp"
                android:textColor="@color/Juice"
                android:paddingRight="3dp"
                android:paddingLeft="3dp"
                android:background="@drawable/type_lable_bg"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/tv_gladapter_ghownew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="十成新"
                android:textSize="13sp"
                android:textColor="@color/colorRed"
                android:paddingRight="3dp"
                android:paddingLeft="3dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/hownew_label_bg"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/tv_gladapter_ggetway"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮寄"
                android:textSize="13sp"
                android:textColor="@color/Green"
                android:paddingRight="3dp"
                android:paddingLeft="3dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/getway_label_bg"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

