<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contoller.activity.BuydetailActivity"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_buydetail_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimary"
        android:fitsSystemWindows="true">

        <ImageView
            android:id="@+id/iv_buydetail_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/ic_arrowleft_white_foreground"
            android:layout_marginLeft="5dp"
            android:clickable="true"/>

        <TextView
            android:id="@+id/tv_buydetail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="求购详情"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <ScrollView
        android:id="@+id/sv_buydetail_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_buydetail_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_buydetail_headphoto"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/moren_headphoto"
                    android:layout_margin="10dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_buydetail_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="昵称"
                        android:textSize="18sp"
                        android:textColor="@color/Black"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:id="@+id/tv_buydetail_repu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="信誉优秀"
                        android:textSize="10sp"
                        android:textColor="@color/btn_answer_normal"
                        android:layout_below="@+id/tv_buydetail_nickname"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/repu_lable_bg"
                        android:padding="2dp"/>

<!--                    <ImageView-->
<!--                        android:id="@+id/iv_buydetail_tel"-->
<!--                        android:layout_width="35dp"-->
<!--                        android:layout_height="35dp"-->
<!--                        android:layout_alignParentRight="true"-->
<!--                        android:layout_centerVertical="true"-->
<!--                        android:layout_marginRight="20dp"-->
<!--                        android:src="@drawable/ic_call" />-->

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/hui"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_buydetail_bname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商品名称"
                        android:textSize="18sp"
                        android:textColor="@color/Black"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_buydetail_symbol1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥ "
                        android:textColor="@color/colorRed"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/tv_buydetail_sprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textColor="@color/colorRed"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_buydetail_symbol1"/>

                    <TextView
                        android:id="@+id/tv_buydetail_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="---"
                        android:textColor="@color/Black"
                        android:layout_toRightOf="@+id/tv_buydetail_sprice"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/tv_buydetail_symbol2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  ¥ "
                        android:textColor="@color/colorRed"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_toRightOf="@+id/tv_buydetail_to"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/tv_buydetail_bprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textSize="17sp"
                        android:textColor="@color/colorRed"
                        android:textStyle="bold"
                        android:layout_toRightOf="@+id/tv_buydetail_symbol2"
                        android:layout_marginTop="3dp"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/tv_buydetail_bgetway"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="邮寄"
                        android:textSize="13sp"
                        android:textColor="@color/colorWhite"
                        android:layout_marginLeft="20dp"
                        android:padding="3dp"
                        android:background="@color/Peachred"/>

                    <TextView
                        android:id="@+id/tv_buydetail_bhownew"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="九成新"
                        android:textSize="13sp"
                        android:textColor="@color/colorWhite"
                        android:layout_toRightOf="@+id/tv_buydetail_bgetway"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:padding="3dp"
                        android:background="@color/Peachred"/>

                    <TextView
                        android:id="@+id/tv_buydetail_btype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="生活百货"
                        android:textSize="13sp"
                        android:textColor="@color/colorWhite"
                        android:layout_toRightOf="@+id/tv_buydetail_bhownew"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:padding="3dp"
                        android:background="@color/Peachred"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_buydetail_bcontent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textSize="16sp"
                    android:textColor="@color/Black"/>

                <ImageView
                    android:id="@+id/iv_buydetail_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:padding="2dp"
                    android:src="@drawable/ic_moren_goods"
                    android:scaleType="centerCrop"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_buydetail_location"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_location_foreground"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/tv_buydetail_pub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布于"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_buydetail_location"/>

                <TextView
                    android:id="@+id/tv_buydetail_bcity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京市"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_buydetail_pub"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="浏览 "
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_toLeftOf="@+id/tv_buydetail_bnumber"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/tv_buydetail_bnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12345"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="35dp"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/hui"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_comments"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部评论"
                    android:textSize="15sp"
                    android:textColor="@color/Black"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_blackdot_foreground"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:id="@+id/tv_buydetail_baccountnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1234"
                    android:textSize="15sp"
                    android:textColor="@color/Black"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/hui"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ListView
                    android:id="@+id/lv_buydetail_comments"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:background="@color/hui" />

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite">

<!--        <LinearLayout-->
<!--            android:id="@+id/ll_buydetail_chat"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="match_parent"-->
<!--            android:orientation="vertical">-->

<!--            <ImageView-->
<!--                android:id="@+id/iv_buydetail_chat"-->
<!--                android:layout_width="35dp"-->
<!--                android:layout_height="35dp"-->
<!--                android:src="@drawable/ic_chat"-->
<!--                android:layout_centerVertical="true"-->
<!--                android:layout_gravity="center_horizontal"-->
<!--                android:layout_marginTop="5dp"-->
<!--                android:layout_marginLeft="5dp"-->
<!--                android:layout_marginRight="5dp"/>-->

<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="私聊"-->
<!--                android:textSize="10sp"-->
<!--                android:layout_gravity="center_horizontal"-->
<!--                android:layout_marginBottom="5dp"/>-->

<!--        </LinearLayout>-->

        <EditText
            android:id="@+id/et_buydetail_conments"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_toRightOf="@+id/ll_buydetail_chat"
            android:layout_toLeftOf="@+id/ll_buydetail_button"
            android:background="@drawable/edittext_seach"
            android:layout_centerVertical="true"
            android:hint="留言问问更多细节吧~"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="15sp"
            android:maxLength="300"/>

        <LinearLayout
            android:id="@+id/ll_buydetail_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_buydetail_bsend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发送"
                android:textColor="@color/Black"
                android:textSize="15sp"
                android:background="@color/yellow"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>