<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/hui">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_mybuylist_gimage"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_moren_goods"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_mybuylist_gdetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品描述"
                    android:textSize="15sp"
                    android:textColor="@color/Black"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/tv_mybuyadapter_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥ "
                    android:textSize="15sp"
                    android:textColor="@color/colorRed"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:id="@+id/tv_mybuylist_aprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textSize="15sp"
                    android:textColor="@color/colorRed"
                    android:layout_toRightOf="@+id/tv_mybuyadapter_text1"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:singleLine="true"/>

                <TextView
                    android:id="@+id/tv_mybuylist_astate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交易成功"
                    android:textSize="13sp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/hui"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

<!--            <LinearLayout-->
<!--                android:id="@+id/ll_mybuylist_chat"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_centerVertical="true"-->
<!--                android:layout_marginLeft="10dp"-->
<!--                android:clickable="true"-->
<!--                android:orientation="horizontal">-->

<!--                <ImageView-->
<!--                    android:layout_width="25dp"-->
<!--                    android:layout_height="25dp"-->
<!--                    android:src="@drawable/ic_chat" />-->

<!--                <TextView-->
<!--                    android:id="@+id/tv_mybuyadapter_chat"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_gravity="center_vertical"-->
<!--                    android:text="联系"-->
<!--                    android:textColor="@color/Black"-->
<!--                    android:textSize="13sp" />-->

<!--            </LinearLayout>-->

            <TextView
                android:id="@+id/tv_mybuylist_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除订单"
                android:textSize="13sp"
                android:textColor="@color/Black"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/collect_label_bg"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:clickable="true"
                android:visibility="gone"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>